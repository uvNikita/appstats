<!doctype html>
<html>
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
    <head>
        <title>AppStats</title>
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/bootstrap.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/bootstrap-responsive.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/appstats.css') }}">
        <script src="{{ url_for('static', filename='js/jquery-1.7.2.min.js') }}"></script>
    </head>
    <body>
        <div class=container>
            <div class="navbar navbar-inverse">
                <div class=navbar-inner>
                    <a class="brand" href="{{ nav_list['url'] }}">{{ nav_list['name'] }}</a>
                    <ul class=nav>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                {{ nav_list['apps_list']['title'] }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                            {% for app_name, app_url in nav_list['apps_list']['apps'].iteritems() %}
                                <li>
                                    <a href="{{ app_url }}">
                                        {{ app_name }}
                                    </a>
                                </li>
                            {% endfor %}
                            </ul>
                        </li>
                        {% for rate in nav_list['rates'] %}
                            <li class={{ "active" if rate['active'] else "" }}>
                                <a href="{{ rate['url'] }}">
                                    {{ rate['name'] }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% block body %}{% endblock %}
        </div>
        <script src="{{ url_for('static', filename='js/bootstrap.js') }}"></script>
    </body>
</html>
